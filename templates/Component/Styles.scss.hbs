.{{pascalCase name}} {
  text-align: center;
}

.{{pascalCase name}}-logo {
  height: 40vmin;
  pointer-events: none;
}

@media (prefers-reduced-motion: no-preference) {
  .{{pascalCase name}}-logo {
    animation: {{pascalCase name}}-logo-spin infinite 20s linear;
  }
}

.{{pascalCase name}}-header {
  background-color: #282c34;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: calc(10px + 2vmin);
  color: white;
}

.{{pascalCase name}}-link {
  color: #61dafb;
}

@keyframes {{pascalCase name}}-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
